@model ucarkadir.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-logo">
    <a href="index.html">
        <img class="align-content" src="http://dbhsoft.com/application/views/dbhsoft2/layouts/images/logo.png" alt="">
    </a>
</div>

@using (Html.BeginForm("Login", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="login-form">

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeHolder = "Lütfen Mail Giriniz" })
        @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <label>Şifre</label>
        @Html.TextBoxFor(model => model.UserPassword, new { @class = "form-control", placeHolder = "Lütfen Password Giriniz" })
        @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
    </div>
    <div class="checkbox">
        <label>            
            @Html.CheckBoxFor(m => m.RememberMe, false) Beni Hatırla
        </label>
        <label class="pull-right">
            <a href="~/Admin/ForgetPassword">Şifremi Unuttum?</a>
        </label>

    </div>

    <button type="submit" value="Login" class="btn btn-success btn-flat m-b-30 m-t-30">Giriş Yap</button>

    

    

</div>
}

